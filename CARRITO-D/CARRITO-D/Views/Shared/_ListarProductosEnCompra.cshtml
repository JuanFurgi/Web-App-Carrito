@model IEnumerable<CARRITO_D.Models.CarritoItem>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Carrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto.PrecioVigente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string fotoPath = MisMetodos.getUrl(Configs.ProductosURL, item.Producto.Foto, Configs.FotoProdDef);

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Carrito.CarritoId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producto.PrecioVigente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subtotal)
                </td>
                <td>
                    <figure class="figure">

                        <img src="@fotoPath" height="100px" width="100px" class="figure-img img-fluid rounded" alt="Foto Producto" asp-append-version="true">
                    </figure>
                </td>
            </tr>
        }
    </tbody>
</table>

