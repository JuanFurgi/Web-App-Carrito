@model CARRITO_D.Models.Producto
@{
    string fotoPath = MisMetodos.getUrl(Configs.ProductosURL, Model.Foto, Configs.FotoProdDef);
}

<h1>Detalles de Producto</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <div class="col-sm">
        <figure class="figure">

            <img src="@fotoPath" class="figure-img img-fluid rounded" alt="Foto Producto" asp-append-version="true">

            <figcaption class="figure-caption text-right">Foto Producto @Model.Nombre</figcaption>
        </figure>
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo)
            {
                @Html.DisplayFor(model => model.Activo)
            }
            else
            {
                <p style="color:#6c757d">Pausado</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioVigente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecioVigente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria.Nombre)
        </dd>
    </dl>
</div>