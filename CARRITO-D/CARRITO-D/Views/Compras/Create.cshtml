@model CARRITO_D.ViewModels.CompraNueva

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h5>Estas seguro de querer finalizar la compra?</h5>
            <hr />
            
            <input asp-for="Total" value="@ViewBag.TotalValue" type="hidden"/>
            <input asp-for="ClienteId" value="@ViewBag.ClienteId" type="hidden" />
            <input asp-for="CarritoId" value="@ViewBag.CarritoId" type="hidden" />
            
            <div class="form-group">
                <label asp-for="SucursalId" class="control-label"></label>
                <select asp-for="SucursalId" class="form-control" asp-items="ViewBag.Sucursales"></select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Finalizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-controller="Carritos" asp-route-id="@signInManager.UserManager.GetUserId(User)">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
