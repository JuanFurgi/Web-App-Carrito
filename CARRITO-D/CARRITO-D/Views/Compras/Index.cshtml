@model IEnumerable<CARRITO_D.Models.Compra>

@{
    ViewData["Title"] = "Historial";
}

<h1>Historial Compras</h1>
<hr />
@if(Model.Any()){
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CompraId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Carrito)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompraId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Carrito.CarritoId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td class="links">

                        <a class="links-modif" asp-action="Details" asp-route-id="@item.CompraId">Mas Informacion</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}else{
    <h2>No tienes ninguna compra hecha</h2>
}
