@model IEnumerable<CARRITO_D.Models.StockItem>

@{
    ViewData["Title"] = "Detalles";
}

<h1>Detalles</h1>

<div>
    <h4>Sucursal</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().Sucursal.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().Sucursal.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().Sucursal.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sucursal.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.First().Sucursal.Email)
        </dd>
    </dl>

</div>
<div>
    <hr />
    <h5>Productos en stock</h5>
    <partial name="_ListarStockItems" for="@Model" />
</div>
<div>
    <a class="links-modif link-volver" asp-action="Index" asp-controller="Sucursales">Volver</a>
</div>
