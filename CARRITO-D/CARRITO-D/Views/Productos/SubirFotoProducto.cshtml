@model CARRITO_D.ViewModels.Representacion
@{
    ViewData["Title"] = "SubirFoto";
}

<h1>Subir Foto Producto</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Imagen" class="control-label"></label>
            </div>

            <div class="input-group mb-3">
                <input class="form-control" asp-for="Imagen"/>
                <input type="submit" value="Subir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <form asp-action="EliminarFotoProducto" asp-controller="Productos" asp-route-id="@ViewBag.Producto.Id">
        <div>
            <button type="submit" class="btn btn-danger">
                Eliminar
            </button>
        </div>
    </form>
</div>
