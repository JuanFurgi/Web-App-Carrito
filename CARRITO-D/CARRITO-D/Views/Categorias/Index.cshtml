@model IEnumerable<CARRITO_D.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h1 class="titles">Categorias</h1>
@if(User.IsInRole("Empleado")){
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="text-align:start" class="titles">
                    <a asp-action="MostrarProductos" asp-route-id="@item.CategoriaId" class="nav-link text-dark">@Html.DisplayFor(modelItem => item.Nombre)</a>
            </td>
            
            <td class="links">
                @if(User.IsInRole("Empleado")){
                        <a class="links-modif" asp-action="Edit" asp-route-id="@item.CategoriaId">Editar</a> <span>|</span>
                        
                } 
                <a class="links-modif" asp-action="Details" asp-route-id="@item.CategoriaId">Mas Informacion</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
