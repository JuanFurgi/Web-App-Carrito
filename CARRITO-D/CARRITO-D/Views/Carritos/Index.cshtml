@model IEnumerable<CARRITO_D.Models.Carrito>

@{
    ViewData["Title"] = "Carrito";
}

<h1>Carrito</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subtotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subtotal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CarritoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CarritoId">Mas Infromacion</a> |
                <a asp-action="Delete" asp-route-id="@item.CarritoId">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
